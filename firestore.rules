rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow logged-in users to read/write their own profile.
    // Allow any logged-in user to read any profile (for dashboards).
    match /profiles/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Allow any logged-in user to read resume documents.
    // This is needed for referrers to get the download URL.
    // Only the user themselves can create or update their own resume document.
    match /resumes/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == userId;
    }

    // Seeker can create requests.
    // Seeker and Referrer involved can read/update the request.
    match /referral_requests/{requestId} {
      allow read, update: if request.auth.uid == resource.data.seekerId || request.auth.uid == resource.data.referrerId;
      allow create: if request.auth.uid == request.resource.data.seekerId;
      allow delete: if request.auth.uid == resource.data.seekerId;
    }

    // Allow any authenticated user to create a suggestion.
    match /suggestions/{suggestionId} {
      allow read: if false; // No one needs to read suggestions from the client
      allow write: if request.auth != null;
    }
  }
}
